<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/horizontal"
    android:paddingTop="30dp"
    tools:context=".AddComicActivity">

    <LinearLayout
        android:gravity="center"
        android:weightSum="2"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginVertical="@dimen/vertical"
            android:layout_weight="1"
            android:id="@+id/iv_cover"
            android:layout_width="138dp"
            android:layout_height="138dp"
            app:srcCompat="@mipmap/ic_launcher"
            />

        <Button
            android:paddingHorizontal="@dimen/horizontal"
            android:layout_marginVertical="@dimen/vertical"
            android:layout_weight="1"
            android:background="@drawable/shape"
            android:layout_gravity="center"
            android:id="@+id/btn_addCover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Cover"
            />


    </LinearLayout>

    <EditText
        android:gravity="center"
        android:layout_marginVertical="@dimen/vertical"
        android:id="@+id/et_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Comic Title"
        android:inputType="textPersonName"
        />

    <EditText
        android:gravity="center"
        android:layout_marginVertical="@dimen/vertical"
        android:id="@+id/et_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Description"
        android:inputType="textPersonName"
        />



    <Button
        android:background="@drawable/shape"
        android:id="@+id/btn_addComic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add new Comic"
        android:layout_marginVertical="@dimen/vertical"
        />

    <Button
        android:paddingHorizontal="@dimen/horizontal"
        android:layout_marginVertical="@dimen/vertical"
        android:layout_gravity="center"
        android:background="@drawable/shape"
        android:id="@+id/btn_showListComic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Comic"
        />


</LinearLayout>