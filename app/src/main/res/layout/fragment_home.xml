<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ecf0f1"
    tools:context=".fragments.HomeFragment">

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_splash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitStart"
            android:src="@mipmap/banner4"
            android:contentDescription="TODO" />

   <LinearLayout
       android:orientation="horizontal"
       android:layout_width="match_parent"
       android:weightSum="2"
       android:layout_height="wrap_content">

       <Button
           android:textColor="#bdc3c7"

           android:fontFamily="@font/caviar"
           android:layout_marginHorizontal="@dimen/vertical"
           android:background="@drawable/shapes_input"
           android:layout_weight="1"
           android:id="@+id/home_show_list"
           android:text="Show List Comics"
           android:textSize="25sp"
           android:layout_width="200dp"
           android:layout_marginBottom="@dimen/vertical"
           android:layout_height="150dp" />
       <Button
           android:textColor="#bdc3c7"

           android:fontFamily="@font/caviar"
           android:layout_marginBottom="@dimen/vertical"
           android:shadowColor="@color/design_default_color_primary_dark"
           android:layout_marginHorizontal="@dimen/horizontal"
           android:background="@drawable/shapes_input"
           android:layout_weight="1"
           android:id="@+id/home_add_comic"
           android:text="Add New Comic"
           android:textSize="25sp"
           android:layout_width="200dp"
           android:layout_height="150dp" />

   </LinearLayout>



        <Button
            android:textColor="#bdc3c7"
            android:layout_marginHorizontal="@dimen/vertical"
            android:layout_marginVertical="@dimen/vertical"
            android:background="@drawable/shape"
            android:id="@+id/home_register"
            android:text="Register new User"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:textColor="#bdc3c7"
            android:layout_marginHorizontal="@dimen/horizontal"
            android:background="@drawable/shape"
            android:id="@+id/home_logout"
            android:text="Logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



    </LinearLayout>

</FrameLayout>